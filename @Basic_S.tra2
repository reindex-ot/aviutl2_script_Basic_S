@バウンス
--information:バウンス@Basic_S v1.72-beta3 (for beta26) by σ軸
--label:Basic_S
--speed:0,1
--param:反発係数,0.70710678
--param:回数,0
--timecontrol
local gp, math = obj.getpoint, math;
local n, i, t = gp("num"), math.modf(gp("index"));
if i >= n - 1 then i, t = n - 2, 1 end
t = gp("timecontrol", "value", t * gp("time", n - 1));
local v0, v1, sp0, sp1 = gp(i), gp(i + 1), gp("accelerate"), gp("decelerate");
if sp0 == sp1 then
	if t < 0.5 then t, v1, sp1 = 2 * t, (v0 + v1) / 2, not sp1;
	else t, v0 = 2 * t - 1, (v0 + v1) / 2 end
end
if sp1 then v0, v1, t = v1, v0, 1 - t end

local e, k = gp("param");
e = math.min(math.max(e, 0), 0.999);
k = math.max(k, 0);
local sum, sum2 = e / (1 - e), 0;
if k >= 0.5 then
	local i, f = math.modf(k);
	sum2 = (i > 0 and e ^ i or 1) * ((1 - f) + f * e) / (1 - e);
end
local T = t * (0.5 + sum) + (1 - t) * sum2;
local scale = e > 0 and e ^ math.ceil(math.log(T / sum) / math.log(e)) or 1;
local tau = T - scale * sum;
local rho = 4 * tau * (scale - tau);

return v0 + (v1 - v0) * rho;

